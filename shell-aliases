# colours!
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# listing shizzle
alias l='ls'
alias ll='ls -l'
alias la='ls -A'
alias lal='ls -al'
alias lla='lal'

# exiting in style
alias e='exit'
alias ecksit='exit'

# megaupgrade
alias mu='sudo apt-get update && sudo apt-get dist-upgrade && sudo apt-get autoremove'

# git
alias gits='git status'
alias gitds='git diff --staged'
alias gitc='git commit'
alias gitca='git commit --amend'
alias gitaa='git add --all'
alias gitb='git branch'
alias gitch='git checkout'
alias gitcho='git checkout --orphan'
alias gitp='git push'
alias gitpl='git pull'
alias gitrh='git reset --hard'

# tools/shortcuts
alias s='sudo'
alias c='clear'
alias v='vim ~/.vimrc'
alias mx='chmod +x'
alias ag='apt-get'
alias cpd='cp --parents'
alias xres='[[ -e ~/.Xresources ]] && xrdb -merge ~/.Xresources'
alias grep='grep --ignore-case'
alias crlf='grep  -rn * | grep -v Binary'

# launching + software
alias to='sudo /etc/init.d/nginx reload'
alias sublime='/opt/sublime-text-2/sublime_text'

# load user-specific aliases
aliases_file=~/.config/shell-aliases
if [[ -e "$aliases_file" &&
      -f "$aliases_file" &&
      -r "$aliases_file" ]]; then
  source "$aliases_file"
fi
